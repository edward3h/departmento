{
  "name": "departmento",
  "version": "1.0.0",
  "description": "Bookmarklet to help with Administratum",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "mkdir -p dist && mkdir -p docs/assets/js && mkdir -p docs/_includes && bookmarklet src/index.js dist/bookmarklet.js && sed -e 's#__site__url__#{{ site.url }}/departmento#' < dist/bookmarklet.js > docs/_includes/bookmarklet.js && cp src/*.{mjs,yml} docs/assets/js/",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edward3h/departmento.git"
  },
  "author": "Edward",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/edward3h/departmento/issues"
  },
  "homepage": "https://github.com/edward3h/departmento#readme",
  "devDependencies": {
    "bookmarklet": "^1.0.4",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "simple-git-hooks": "^2.2.0"
  },
  "dependencies": {
    "jquery": "^3.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,mjs,css,md}": "prettier --write"
  }
}
